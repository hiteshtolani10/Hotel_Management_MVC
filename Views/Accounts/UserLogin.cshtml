@model UserLogin

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_loginLayout.cshtml";
}

<div class="container MainContainer">
    <div class="row MainRow justify-content-center pt-5">
        <div class="col-lg-6 col-md-8 mx-auto MainCol shadow-lg p-3 mb-5 rounded">
            <div class="text-center">
                <h2>User Login</h2>
                <h4>Login to Continue</h4>
                <hr />
            </div>
            
            @if (!String.IsNullOrEmpty(ViewBag.UserLoginError))
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>Hang On!</strong> @ViewBag.UserLoginError
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            <form asp-action="UserLogin">
                <div asp-validation-summary="All"></div>
                <div class="form-group row m-4">
                    <label asp-for="Email" class="control-label form-label col-sm-4"></label>
                    <div class="col-sm-8">
                        <input asp-for="Email" class="form-control form-control-sm" autocomplete="off" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row m-4">
                    <label asp-for="Password" class="control-label form-label col-sm-4"></label>
                    <div class="col-sm-8">
                        <input asp-for="Password" class="form-control form-control-sm" autocomplete="off" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 mx-auto text-center">
                    <div class="form-group row">
                        <div class="col-md-6">
                            <input type="submit" value="Login" class="btn btn-success" />
                        </div>
                        <div class="col-md-6">
                            <a href="/Accounts/UserRegister" class="btn btn-primary">Register</a>
                        </div>
                    </div>
                </div>

                @*QR Code Trial*@
                <div class="col-md-6 mx-auto text-center">
                    <div class="form-group row mx-auto justify-content-center p-3">
                        <div class="col-md-6">
                            <a href="/Accounts/CreateQRCode" class="btn btn-outline-secondary disabled">Scan</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mx-auto text-center">
                    <div class="form-group row mx-auto justify-content-center p-3">
                        <div class="col-md-6">
                            <a href="/Home/Index" class="btn btn-outline-secondary">Go Back</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
