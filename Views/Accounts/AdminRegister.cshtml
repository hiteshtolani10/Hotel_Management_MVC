@model AdminRegister

@{
    ViewData["Title"] = "Register-Hotel";
    Layout = "~/Views/Shared/_loginLayout.cshtml";
}

<div class="container MainContainer">
    <div class="row MainRow justify-content-center pt-5">
        <div class="col-lg-6 col-md-8 mx-auto MainCol shadow-lg p-3 mb-5 rounded">
            <div class="text-center">
                <h4>Register An Admin</h4>
            </div>
            <hr />

            <form asp-action="AdminRegister">
                <div asp-validation-summary="All"></div>
                <div class="form-group row m-4">
                    <label asp-for="FirstName" class="control-label form-label col-sm-4"></label>
                    <div class="col-sm-8">
                        <input asp-for="FirstName" class="form-control form-control-sm" autocomplete="off" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row m-4">
                    <label asp-for="LastName" class="control-label form-label col-sm-4"></label>
                    <div class="col-sm-8">
                        <input asp-for="LastName" class="form-control form-control-sm" autocomplete="off" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row m-4">
                    <label asp-for="Email" class="control-label form-label col-sm-4"></label>
                    <div class="col-sm-8">
                        <input asp-for="Email" class="form-control form-control-sm" autocomplete="off" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row m-4">
                    <label asp-for="Password" class="control-label form-label col-sm-4"></label>
                    <div class="col-sm-8">
                        <input asp-for="Password" class="form-control form-control-sm" autocomplete="off" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row m-4">
                    <label asp-for="ConfirmPassword" class="control-label form-label col-sm-4"></label>
                    <div class="col-sm-8">
                        <input asp-for="ConfirmPassword" class="form-control form-control-sm" autocomplete="off" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mx-auto text-center">
                    <div class="form-group row">
                        <div class="col-md-6">
                            <input type="submit" value="Register" class="btn btn-success" />
                        </div>
                        <div class="col-md-6">
                            <a href="/Accounts/AdminLogin" class="btn btn-primary">Login?</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
